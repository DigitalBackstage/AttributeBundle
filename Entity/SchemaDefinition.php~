<?php

namespace Padam87\AttributeBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * @ORM\Entity
 * @ORM\Table(name="attribute_schema_definition")
 */
class SchemaDefinition extends Definition
{
    /**
     * @ORM\Id
     * @ORM\Column(type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
     * @var int
     */
    private $id;
    
    /**
     * @ORM\Column(type="string", length=100, nullable=true)
     * @var string
     */
    private $unit;
    
    /**
     * @ORM\Column(type="boolean", nullable=true)
     * @var boolean 
     */
    private $required;
    
    /**
     * @ORM\ManyToOne(targetEntity="Padam87\AttributeBundle\Entity\Schema")
     * @ORM\JoinColumn(name="schema_id", referencedColumnName="id")
     * @var Schema
     */
    private $schema;

    /**
     * Get id
     *
     * @return integer 
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set unit
     *
     * @param string $unit
     * @return SchemaDefinition
     */
    public function setUnit($unit)
    {
        $this->unit = $unit;
    
        return $this;
    }

    /**
     * Get unit
     *
     * @return string 
     */
    public function getUnit()
    {
        return $this->unit;
    }

    /**
     * Set required
     *
     * @param boolean $required
     * @return SchemaDefinition
     */
    public function setRequired($required)
    {
        $this->required = $required;
    
        return $this;
    }

    /**
     * Get required
     *
     * @return boolean 
     */
    public function getRequired()
    {
        return $this->required;
    }

    /**
     * Set schema
     *
     * @param Padam87\AttributeBundle\Entity\Schema $schema
     * @return SchemaDefinition
     */
    public function setSchema(\Padam87\AttributeBundle\Entity\Schema $schema = null)
    {
        $this->schema = $schema;
    
        return $this;
    }

    /**
     * Get schema
     *
     * @return Padam87\AttributeBundle\Entity\Schema 
     */
    public function getSchema()
    {
        return $this->schema;
    }
}